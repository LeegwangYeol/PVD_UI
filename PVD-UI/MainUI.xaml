<UserControl x:Class="PVD_UI.MainUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PVD_UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280"
             Background="#1e1e1e"
             FontFamily="Malgun Gothic">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Purple" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 공통 스타일 정의 -->
            <Style x:Key="SidebarLabelStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#a1a1aa"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>

            <Style x:Key="SidebarValueStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="0,2,0,12"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <Style x:Key="CustomFlatButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="Gray"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Padding" Value="16,0"/>
                <Setter Property="BorderThickness" Value="0,3,0,0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#3f3f46"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomFlatButton}">
                <Setter Property="Foreground" Value="#3b82f6"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="BorderBrush" Value="#3b82f6"/>
            </Style>

            <Style x:Key="CustomRaisedButton" TargetType="Button">
                <Setter Property="Background" Value="#3b82f6"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#2563eb"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="CustomButton" TargetType="Button">
                <Setter Property="Background" Value="#3f3f46"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#4b5563"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="CustomCard" TargetType="Border">
                <Setter Property="Background" Value="#3f3f46"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="4"/>
            </Style>

            <!-- 다이어그램 노드 템플릿 -->
            <DataTemplate x:Key="DiagramNodeTemplate">
                <Border Width="50" Height="50" CornerRadius="30">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#4a4a54"/>
                            <Setter Property="BorderBrush" Value="#6f6f7a"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                    <Setter Property="Background" Value="#3b82f6"/>
                                    <Setter Property="BorderBrush" Value="White"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding Number}" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="White" FontWeight="Bold" FontSize="10"/>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1. 헤더 -->
        <Border Grid.Row="0" Background="#1f1f23" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- HAM 로고 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Robot" Width="32" Height="32" Foreground="#3b82f6"/>
                    <TextBlock Text="HAM" FontSize="20" FontWeight="Bold" Foreground="White" 
                               VerticalAlignment="Center" Margin="12,0,0,0"/>
                </StackPanel>

                <!-- 우측 버튼 그룹 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- 알림 버튼 -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="알림" Foreground="White" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="Bell" Width="24" Height="24"/>
                    </Button>
                    
                    <!-- 저장 버튼 -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="저장" Foreground="White" Margin="0,0,8,0">
                        <materialDesign:PackIcon Kind="ContentSave" Width="24" Height="24"/>
                    </Button>
                    
                    <!-- 언어 변경 버튼 -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="언어 변경" Foreground="White">
                        <materialDesign:PackIcon Kind="Translate" Width="24" Height="24"/>
                    </Button>
                    <!-- 현재 시간 -->
                    <TextBlock Text="{Binding CurrentTime, StringFormat='HH:mm:ss'}" 
                             Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="0,0,16,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 2. 메인 콘텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 2.1. 왼쪽 사이드바 -->
            <Border Grid.Column="0" Background="#27272a" Padding="16">
                <StackPanel>
                    <!-- 제품명과 상태 -->
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 제품명 행 -->
                        <TextBlock Text="제품명" Style="{StaticResource SidebarLabelStyle}" 
                                 Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="XDKTI_B" Style="{StaticResource SidebarValueStyle}" 
                                 Grid.Row="0" Grid.Column="1" Margin="8,0,0,0"/>
                        
                        <!-- 진행상황 행 -->
                        <TextBlock Text="진행상황" Style="{StaticResource SidebarLabelStyle}" 
                                 Grid.Row="1" Grid.Column="0" Margin="0,8,0,0"/>
                        <TextBlock Text="STOP" Style="{StaticResource SidebarValueStyle}" 
                                 Foreground="#ef4444" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Margin="8,8,0,0"/>
                    </Grid>

                    <!-- 원형 진행률 -->
                    <Viewbox Height="120" Margin="0,16">
                        <Grid Width="120" Height="120">
                            <Ellipse Width="120" Height="120" Stroke="#3f3f46" StrokeThickness="8"/>
                            <Ellipse Width="120" Height="120" Stroke="#3b82f6" StrokeThickness="8"
                                     StrokeDashArray="213 75" StrokeDashCap="Round" RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <TextBlock Text="85%" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Grid>
                    </Viewbox>

                    <!-- 수량 정보 카드 -->
                    <Border Style="{StaticResource CustomCard}" Margin="0,16,0,0">
                        <UniformGrid Columns="3">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="지연수량" Style="{StaticResource SidebarLabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="74990" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="진행수량" Style="{StaticResource SidebarLabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="25009" FontWeight="Bold" FontSize="16" Foreground="#3b82f6" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="전체" Style="{StaticResource SidebarLabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="99999" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Foreground="White"/>
                            </StackPanel>
                        </UniformGrid>
                    </Border>

                    <!-- 상세 정보 카드들 -->
                    <UniformGrid Columns="2" Margin="0,16">
                        <Border Style="{StaticResource CustomCard}">
                            <StackPanel>
                                <TextBlock Text="SPM" Style="{StaticResource SidebarLabelStyle}"/>
                                <TextBlock Text="2.7" FontWeight="Bold" FontSize="20" Foreground="White"/>
                                <TextBlock Text="EA/min" Style="{StaticResource SidebarLabelStyle}" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource CustomCard}">
                            <StackPanel>
                                <TextBlock Text="평균 SPM" Style="{StaticResource SidebarLabelStyle}"/>
                                <TextBlock Text="3.0" FontWeight="Bold" FontSize="20" Foreground="White"/>
                                <TextBlock Text="EA/min" Style="{StaticResource SidebarLabelStyle}" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource CustomCard}">
                            <StackPanel>
                                <TextBlock Text="Cycle Time" Style="{StaticResource SidebarLabelStyle}"/>
                                <TextBlock Text="82.19" FontWeight="Bold" FontSize="20" Foreground="White"/>
                                <TextBlock Text="Sec" Style="{StaticResource SidebarLabelStyle}" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource CustomCard}">
                            <StackPanel>
                                <TextBlock Text="예상 작업 시간" Style="{StaticResource SidebarLabelStyle}"/>
                                <TextBlock Text="5.10" FontWeight="Bold" FontSize="20" Foreground="White"/>
                                <TextBlock Text="Sec" Style="{StaticResource SidebarLabelStyle}" FontSize="10"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource CustomCard}">
                            <StackPanel>
                                <TextBlock Text="팔레트 완료 수량" Style="{StaticResource SidebarLabelStyle}"/>
                                <TextBlock Text="550" FontWeight="Bold" FontSize="20" Foreground="White"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource CustomCard}">
                            <StackPanel>
                                <TextBlock Text="점검 사항" Style="{StaticResource SidebarLabelStyle}"/>
                                <TextBlock Text="5.10" FontWeight="Bold" FontSize="20" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- 점검사항 -->
                    <Border Style="{StaticResource CustomCard}" Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="점검사항" Style="{StaticResource SidebarLabelStyle}" Margin="0,0,0,8"/>
                            <StackPanel>
                                <CheckBox Content="안전장치 점검" IsChecked="True" Foreground="White" Margin="0,0,0,4"/>
                                <CheckBox Content="로봇 팁 교체" IsChecked="True" Foreground="White" Margin="0,0,0,4"/>
                                <CheckBox Content="공구 교체" IsChecked="False" Foreground="White" Margin="0,0,0,4"/>
                                <CheckBox Content="청소 및 정리" IsChecked="False" Foreground="White" Margin="0,0,0,4"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 제어 버튼들 -->
                    <UniformGrid Columns="4" Margin="0,16,0,0" HorizontalAlignment="Stretch" Background="#3f3f46">
                        <Button Style="{StaticResource CustomFlatButton}" ToolTip="원점복귀">
                            <materialDesign:PackIcon Kind="Home" Width="24" Height="24" Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource CustomFlatButton}" ToolTip="시작">
                            <materialDesign:PackIcon Kind="Play" Width="24" Height="24" Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource CustomFlatButton}" ToolTip="재시작">
                            <materialDesign:PackIcon Kind="Restart" Width="24" Height="24" Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource CustomFlatButton}" ToolTip="정지">
                            <materialDesign:PackIcon Kind="Stop" Width="24" Height="24" Foreground="White"/>
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- 2.2. 중앙 메인 패널 -->
            <Grid Grid.Column="1" Margin="24" x:Name="MainContentPanel">
                <!-- 카메라 3 오른쪽의 독립적인 수직 막대 -->
                <Rectangle Width="5" Fill="#00FF00" 
     HorizontalAlignment="Left" VerticalAlignment="Top"
     Height="639" Margin="18,208,0,0" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.368"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <!-- 카메라 피드 플레이스홀더 -->
                <Grid Margin="-4,0,4,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Background="#27272a" CornerRadius="8" Margin="54,6,6,100" BorderBrush="#00FF00" BorderThickness="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Camera" Foreground="Gray" Width="32" Height="32"/>
                            <TextBlock Text="Camera 1" Foreground="Gray" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="2" Background="#27272a" CornerRadius="8" Margin="50,0,0,62" BorderBrush="#00FF00" BorderThickness="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Camera" Foreground="Gray" Width="32" Height="32"/>
                            <TextBlock Text="Camera 2" Foreground="Gray" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="0" Background="#27272a" CornerRadius="8" Margin="55,64,13,10" BorderBrush="#00FF00" BorderThickness="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Camera" Foreground="Gray" Width="32" Height="32"/>
                            <TextBlock Text="Camera 3" Foreground="Gray" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="2" Background="#27272a" CornerRadius="8" Margin="42,82,6,14" BorderBrush="#00FF00" BorderThickness="2">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Camera" Foreground="Gray" Width="32" Height="32"/>
                            <TextBlock Text="Camera 4" Foreground="Gray" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- 중앙 다이어그램 (동적 배치) -->
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="206*"/>
                        <RowDefinition Height="295*"/>
                    </Grid.RowDefinitions>
                    <!-- 외부 원 -->
                    <Ellipse Width="360" Height="360" Stroke="#3f3f46" StrokeThickness="1" Opacity="0.5" Margin="70,70,70,70" Grid.RowSpan="2"/>
                    <Ellipse Width="240" Height="240" Stroke="#3f3f46" StrokeThickness="1" Opacity="0.3" Margin="130,130,130,130" Grid.RowSpan="2"/>
                    <Ellipse Width="140" Height="140" Fill="#3f3f46" Opacity="0.8" Margin="180,180,180,180" Grid.RowSpan="2"/>

                    <!-- 중앙 텍스트 -->
                    <TextBlock Text="ROBOT ARM" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,34,0,0" Grid.Row="1"/>

                    <!-- 동적 노드들을 담을 컨테이너 -->
                    <ItemsControl x:Name="DiagramItemsControl" ItemTemplate="{StaticResource DiagramNodeTemplate}" Grid.RowSpan="2">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="600" Height="600"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                </Grid>
            </Grid>
        </Grid>

        <!-- 3. 하단 탭 바 -->
        <Border Grid.Row="2" Background="#27272a" BorderBrush="#3f3f46" BorderThickness="0,1,0,0">
            <UniformGrid Rows="1" Columns="12">
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ViewDashboard" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="메인화면"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cog" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="작업설정"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Tune" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="환경설정"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="History" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="작업이력"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Input" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="입출력"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Shape" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="모델설정"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Palette" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="팔레트관리"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Ruler" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="캘리브레이션"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PackageVariant" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="소모품점검"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="VectorLine" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="막대 관리"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cog" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="스프링 관리"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource CustomFlatButton}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cog" Width="16" Height="16" Margin="0,0,4,0"/>
                        <TextBlock Text="시스템설정"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </Border>
    </Grid>
</UserControl>
